<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/backgroun">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardElevation="8dp"
        card_view:cardCornerRadius="8dp"
        android:background="@color/backgroun"
        android:layout_marginBottom="8dp">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:background="@color/bottomsColor">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/bottomsColor"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingTop="24dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp">

                    <TextView
                        android:id="@+id/university"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/bottomsTextColor"
                        android:textStyle="bold"
                        android:textSize="25pt"
                        android:layout_margin="1dp"
                        android:background="@color/bottomsColor"
                        android:text="" />

                </LinearLayout>

                <TextView
                    android:id="@+id/napr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:textSize="20pt"
                    android:textStyle="bold"
                    android:background="@color/bottomsColor"
                    android:text=""
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/backgroun"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/textViewInfo1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColorN"
                            android:background="@color/bottomsColor"
                            android:textSize="15pt"
                            android:text="@string/info1"/>
                        <TextView
                            android:id="@+id/disciplins"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/textColor"
                            android:background="@color/bottomsColor"
                            android:textSize="20pt"
                            android:text=""/>
                </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#7b7b7b"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/bottomsColor"
                android:layout_marginTop="4dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/bottomsColor"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/textViewInfo2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/textColorN"
                            android:textAlignment="center"
                            android:background="@color/bottomsColor"
                            android:textSize="15pt"
                            android:text="@string/info2" />

                        <TextView
                            android:id="@+id/balls"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textColor="@color/textColor"
                            android:background="@color/bottomsColor"
                            android:layout_margin="1dp"
                            android:textSize="20pt"
                            android:text=""
                            android:textAlignment="center"/>

                    </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/lines"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="2dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/bottomsColor"
                        android:layout_weight="1"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/textViewInfo3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/textColorN"
                            android:textAlignment="center"
                            android:textSize="15pt"
                            android:text="@string/info3" />

                        <TextView
                            android:id="@+id/zp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textColor="@color/textColor"
                            android:textAlignment="center"
                            android:textSize="20pt"
                            android:text=""/>
                    </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>