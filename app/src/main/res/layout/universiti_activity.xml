<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroun">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/backgroun">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:layout_weight="0.15"
            android:background="@color/backgroun"
            tools:ignore="ExtraText">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bottomsColor2"
                android:orientation="vertical"
                android:layout_margin="0.5dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/butEkz"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/bottomsTextColor"
                    android:background="?attr/selectableItemBackground"
                    android:text="@string/BTEkz"
                    android:elevation="8dp"
                    android:translationZ="4dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bottomsColor2"
                android:orientation="vertical"
                android:layout_margin="0.5dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/butZP"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/textColor"
                    android:background="?attr/selectableItemBackground"
                    android:text="@string/BTZP"
                    android:elevation="8dp"
                    android:translationZ="4dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/containerss"
            android:background="@color/backgroun">
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>