<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/backgroun">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardElevation="8dp"
        card_view:cardCornerRadius="8dp"
        android:background="@color/backgroun"
        android:layout_marginBottom="8dp">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bottomsColor"
            android:orientation="vertical">

            <TextView
                android:id="@+id/uni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:background="@color/bottomsColor"
                android:textColor="@color/bottomsTextColor"
                android:textAlignment="center"
                android:text=""
                android:layout_marginBottom="16dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lines"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/bottomsColor"
                android:layout_marginTop="4dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/bottomsColor"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/textColorN"
                            android:textAlignment="center"
                            android:textSize="10dp"
                            android:background="@color/bottomsColor"
                            android:text="@string/infoproc" />

                        <TextView
                            android:id="@+id/raitProc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:background="@color/bottomsColor"
                            android:textColor="@color/textColor"
                            android:textAlignment="center"
                            android:text="" />
                    </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/lines"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/bottomsColor"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/bottomsColor"
                            android:textColor="@color/textColorN"
                            android:textAlignment="center"
                            android:textSize="10dp"
                            android:text="@string/infozp" />

                        <TextView
                            android:id="@+id/raitZp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:background="@color/bottomsColor"
                            android:textColor="@color/textColor"
                            android:textAlignment="center"
                            android:text="" />
                    </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>