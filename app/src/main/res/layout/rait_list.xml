<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/backgroun">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardElevation="8dp"
        card_view:cardCornerRadius="8dp"
        android:background="@color/backgroun"
        android:layout_marginBottom="8dp">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroun"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardElevation="8dp"
                card_view:cardCornerRadius="8dp">
            <TextView
                android:id="@+id/uni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:background="@color/bottomsColor"
                android:textColor="@color/bottomsTextColor"
                android:textAlignment="center"
                android:text="" />
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    card_view:cardElevation="8dp"
                    card_view:cardCornerRadius="8dp"
                    android:layout_marginTop="1dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/backgroun">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/textColorN"
                            android:textAlignment="center"
                            android:layout_marginRight="1dp"
                            android:background="@color/bottomsColor"
                            android:text="@string/infoproc" />

                        <TextView
                            android:id="@+id/raitProc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:layout_marginRight="1dp"
                            android:background="@color/bottomsColor"
                            android:textColor="@color/textColor"
                            android:textAlignment="center"
                            android:text="" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    card_view:cardElevation="8dp"
                    card_view:cardCornerRadius="8dp"
                    android:layout_marginTop="1dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/backgroun">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/bottomsColor"
                            android:textColor="@color/textColorN"
                            android:textAlignment="center"
                            android:text="@string/infozp" />

                        <TextView
                            android:id="@+id/raitZp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:background="@color/bottomsColor"
                            android:textColor="@color/textColor"
                            android:textAlignment="center"
                            android:text="" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>